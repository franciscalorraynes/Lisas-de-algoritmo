#include<stdio.h>
#include<stdlib.h>
#include<locale.h>

int **soma(int **a, int **b, int n);
void mat_libera(int** mat, int n);
int main(void){
    int n, i, j;
    setlocale(LC_ALL, "Portuguese");

    printf("\n\n");
    printf("Digite a dimensÃ£o da matriz nxn:\n ");
    scanf("%d", &n);

    int **a,**b;
    a=(int **)(malloc(n*sizeof(int*)));
    for(i=0;i<n;i++){
        a[i]=(int*)(malloc(n*sizeof(int)));
    }
    b=(int**)(malloc(n*sizeof(int*)));
    for(j=0;j<n;j++){
        b[j]=(int*)(malloc(n*sizeof(int)));
    }
    printf("Matriz A:\n");
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            printf("Digite os elementos: ");
            scanf("%d", &a[i][j]);
        }
    }
    printf("Matriz B:\n");
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            printf("Digite os elementos: ");
            scanf("%d", &b[i][j]);
        }
    }
    int **matriz=soma(a, b, n);
    printf("A subtração dos elementos de A - B \n");
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            printf(" %d \t ", matriz[i][j]);

        }
    }

    mat_libera(a, n);
    mat_libera(b, n);


    return(0);

}


void mat_libera(int** mat, int n){
  int i;
     for(i = 0; i < n; i++){
        free(mat[i]); 
     }
    free(mat);
}

int **soma(int **a, int **b, int n){
    int i, j;
    int **resul;
    resul=(int**)malloc(n*sizeof(int*));
    for(i=0;i<n;i++){
        resul[i]=(int*)malloc(n*sizeof(int));
    }
    for( i=0;i<n;i++){
        for(j=0;j<n;j++){
            resul[i][j]=a[i][j]-b[i][j];
        }
    }
    return resul;

}
