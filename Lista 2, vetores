//QUESTÃO 1
#include<stdio.h>
#include<stdlib.h>
#include<locale.h>

int main(void){
	int tamanho, i, soma, menor, maior;
	setlocale(LC_ALL, "Portuguese");
	printf("Universidade Federal Rural do Semi-Árido-UFERSA\n ");
 	printf("Diciplina: PEX1243 \n");
 	printf("Aluna: Francisca Lorrayne");
 	printf("\n\n");
	printf("Digite o tamanho do vetor:\n ");
	scanf("%d", &tamanho);
	int*vetor=(int*)malloc(tamanho*sizeof(int));
	if(vetor==NULL){
		printf("Não tem espaço suficente na memória!");
		exit(1);
	}
	for(i=0;i<tamanho;i++){
		printf("Digite o tamanho do vetor: ");
		scanf("%d", &vetor[i]);
		if(maior<vetor[i]){
			maior=vetor[i];
		}
		if(maior>vetor[i]){
			menor=vetor[i];
		}
		
	}
	soma=maior+menor;
	printf("A soma dos vetores %d+%d=%d", maior, menor, soma);
	free(vetor);
	return (0);
}

//QUESTÃO 2
#include<stdio.h>
#include<stdlib.h>
#include<locale.h>


int main(void){
	int quantidade, i;
	float media;
	media=0.0;	
	setlocale(LC_ALL, "Portuguese");
	printf("\tUniversidade Federal Rural do Semi-Árido-UFERSA\n ");
 	printf("\tDiciplina: PEX1243\n");
 	printf("\tAluna: Francisca Lorrayne");
 	printf("\n\n");
 	printf("\tDigite a quantidade de alunos: ");
		scanf("%d", &quantidade);
	float*vetor_notas=(float*)malloc(quantidade*sizeof(float));
	if(vetor_notas==NULL){
		printf("Não tem espaço suficente na memória!");
		exit(1);
 }
 	for(i=0;i<quantidade;i++){
 		printf("\tDigite a %d.o notas ", i+1);
 		scanf("%f", &vetor_notas[i]);
 		media=media+vetor_notas[i];
		 	 }
		media=media/quantidade;
		printf("\tA média é =%.2f", media);
		free(vetor_notas); 	 
 return (0);
}

//QUESTÃO 3

#include<stdio.h>
#include<stdlib.h>
#include<locale.h>

void preenche_ordenado(int n, int *v); 

int main(void){
	int n, i, s;
	setlocale(LC_ALL, "Portuguese");
	printf("\tUniversidade Federal Rural do Semi-Árido-UFERSA\n ");
 	printf("\tDiciplina: PEX1243\n");
 	printf("\tAluna: Francisca Lorrayne");
 	printf("\n\n");
 	
 	printf("Digite os elementos dos vetores: ");
 		scanf("%d", &n);
 	int*vetor=(int*)malloc(n*sizeof(int));
 		if(vetor==NULL){
 			printf("Sem memoria!");
 		exit(1);
	 }
	
		for(i=0;i<n;i++){
			printf("Digite a quantidade de números: ");
			scanf("%d", &vetor[i]);
			preenche_ordenado(n, vetor);
		}
		for(int j=n-1;j>=0;j--){
			printf("[%d]\n", vetor[j]);
		}
printf("\n");
	free(vetor);
	return 0;
}
	 
void preenche_ordenado(int n, int *v){
 int j, resposta;
 for(int i=0;i<n;i++){
 	for( j=0;j<n;j++);
 	 resposta=v[j];
 	if(resposta>v[j]){
 		v[i]=v[j];
 		v[j]=resposta;
	 }
 }
}
