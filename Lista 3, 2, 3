void mat_libera(int** mat, int n){
  int i;
     for(i = 0; i < n; i++){
        free(mat[i]); // libera cada uma das linhas
     }
    free(mat);
}
int posicao(int **matriz, int n, int p){
	int i, j;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(matriz[i][j]==p){
				return 1;
			}
		}
	}
	return 0;

}
