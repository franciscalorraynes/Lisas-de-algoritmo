#include<stdio.h>
#include<stdlib.h>
#include<locale.h>

int **soma(int **a, int **b, int n);

int main(void){
	int n, i, j;
	setlocale(LC_ALL, "Portuguese");
	printf("Universidade Federal Rural do Semi-Árido-UFERSA\n ");
 	printf("Diciplina: PEX1243 \n");
 	printf("Aluna: Francisca Lorrayne");
 	printf("\n\n");
	printf("Digite a dimensão da matriz:\n ");
	scanf("%d", &n);
	
	int **a,**b;
	a=(int **)(malloc(n*sizeof(int*)));
	for(i=0;i<n;i++){
		a[i]=(int*)(malloc(n*sizeof(int)));
	}
	b=(int**)(malloc(n*sizeof(int*)));
	for(j=0;j<n;j++){
		b[j]=(int*)(malloc(n*sizeof(int)));
	}
	printf("Matriz A:\n");
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			printf("Digite a quantidade de elementos: ");
			scanf("%d", &a[i][j]);
		}
	}
		printf("Matriz B:\n");
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			printf("Digite a quantidade de elementos: ");
			scanf("%d", &b[i][j]);
		}
	}
	int **matriz=soma(a, b, n);
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			printf("A soma dos elementos A e B = %d ", matriz[i][j]);

		}
	}
		for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			free(a[i]);
			free(a);
	
		}
	}
		for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			free(a[j]);
			free(a);
	
		}
	}
			for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			free(b[i]);
			free(b);
		}
	}
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			free(b[j]);
			free(b);
		}
	}
	return(0);
	
}
int **soma(int **a, int **b, int n){
	int i, j;
	int **resul;
	resul=(int**)malloc(n*sizeof(int*));
	for(i=0;i<n;i++){
	resul[i]=(int*)malloc(n*sizeof(int));	
	}
	for( i=0;i<n;i++){
		for(j=0;j<n;j++){
			resul[i][j]=a[i][j]+a[i][j];
		}
	}
	return resul;

}


